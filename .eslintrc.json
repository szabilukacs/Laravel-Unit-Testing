{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "ignorePatterns": ["vendor/**/*.js", "vendor/**/*.vue"],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "camelcase": [
            "error"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "vue/script-indent": [
            "error",
            4
        ],
        "vue/html-indent": [
            "error",
            4
        ],
        "no-unused-vars": [
            "error",
            { "ignoreRestSiblings": true }
        ]
    }
}
